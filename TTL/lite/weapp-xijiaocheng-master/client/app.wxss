page {
  font-family: Arial,Helvetica,sans-serif;
  background-color: #ebebeb;
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
}

/* 左浮动 */
.fn-left {
    float: left;
}

/* 右浮动 */
.fn-right {
    float: right;
}

/* 清除浮动 */
.fn-clear {
    visibility:hidden;
    display:block;
    font-size:0;
    content:" ";
    clear:both;
    height:0
}

/* 字体大小 */
.font12 {
    font-size: 24rpx;
}

.font14 {
    font-size: 28rpx;
}

/* 字体图标 */
@font-face {
    font-family: 'iconfont';  /* project id："163415" */
    src: url('//at.alicdn.com/t/font_oai4zufu2m3ac3di.eot');
