    url('//at.alicdn.com/t/font_oai4zufu2m3ac3di.woff') format('woff'),
    url('//at.alicdn.com/t/font_oai4zufu2m3ac3di.ttf') format('truetype'),
    url('//at.alicdn.com/t/font_oai4zufu2m3ac3di.svg#iconfont') format('svg');
}

.iconfont {
    font-family:"iconfont" !important;
    font-size:32rpx;
    font-style:normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.4rpx;
