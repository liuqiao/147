/* 提示信息 */
.promptShow {
    display: block;
    width: 100%;
    padding-bottom: 20rpx;
    text-align: center;
    line-height: 40rpx;
    font-size: 30rpx;
    color: #878787;
}
.promptHide {
    display: none;
}

/* 商品 lists */
.lists-box {
    margin-bottom: 20rpx;
}

.item-box {
    margin-bottom: 20rpx;
  
    border-bottom: 1rpx solid #ddd;
    background-color: rgb(255,255,255);
}

.item-img,
.item-img image {
    width: 100%;
    height: 500rpx;
    overflow: hidden;
}

.item-title {
    display: block;
    width: 100%;
    height: 72rpx;
    padding: 12rpx 30rpx 0;
    line-height: 60rpx;
    font-size: 36rpx;
    color: #444;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.item-content {
    display: -webkit-box;
    width: 100%;
    max-height: 80rpx;
    padding: 0 30rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #666;
    text-overflow: ellipsis;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.item-btm {
    height: 48rpx;
    padding: 24rpx 30rpx 30rpx;
}

.item-price {
    line-height: 48rpx;
    font-size: 40rpx;
    color: #fb5d5d;
}

.item-buy-people {
    float: right;
    width: 154rpx;
    height: 48rpx;
    text-align: center;
    font-size: 28rpx;
    line-height: 48rpx;
    color: #fb5d5d;
    border: 1rpx solid #fb5d5d;
    border-radius: 4rpx;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.item-buy-people .icon-people {
    display: inline-block;
    font-size: 40rpx;
    vertical-align: -14rpx;
    overflow: hidden;
}

